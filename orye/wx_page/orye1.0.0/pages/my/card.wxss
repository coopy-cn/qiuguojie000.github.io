/* pages/my/card.wxss */
.card-page{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx; 
}

.card-box{
  position: relative;
}

.card-wrap{
  display: flex;
  position: absolute;
  flex-direction: row-reverse;
  right: 33rpx;
  bottom: 58rpx;
 
}

.card-play{
  width: 130rpx;
  height: 50rpx;
}
.card-page .buy{
  background-color: #f79646;
  text-align: center;
  line-height: 50rpx;
  color: white;
  border: 1rpx solid #fff;
  border-radius: 10%;
}
.card-use{
}
.card-use .use{
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  background-color: #349f73;
  border: 1rpx solid #fff;
  border-radius: 10%;
}
.card-play .font{
  position: absolute;
  bottom: 50rpx;
  left: 10rpx;
  font-size: 20rpx;
  color: red;
}

.click{
  opacity: 0.8;
}
page{
  width: 100%;
  height: 100%;
}

image{
  width: 95vw;
  margin-bottom: 30rpx;
}
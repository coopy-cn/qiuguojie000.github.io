/**app.wxss**/
page {
  font-family: 'Microsoft YaHei', sans-serif, -apple-system-font, 'Helvetica Neue', Helvetica;
  height: 100%;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.news{
    width: 100%;
    height: auto;
}
.newsitem {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  padding: 30rpx;
  position: relative;
}

.newsitem .img {
  width: 240rpx;
  height: 140rpx;
  margin-right: 15rpx;
}
.newsitem .none {
  width: 240rpx;
  height: 140rpx;
  margin-right: 15rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 30rpx;
  border: 1px solid #eee;
  box-sizing: border-box
}
.newsitem .cont{
  flex: 1;
    position: relative;font-size: 28rpx
}
.newsitem .commentnum{
    position: absolute;
    bottom: 0;
    right: 0;
}
.newsitem .btn{
    position: absolute;
    width: 40%;
    right: 0;
    color:green;
}
.newsitem .place{
    position: absolute;
    top: 56rpx;
    left: 0;
    font-size:28rpx;
}
.newsitem .time{
    position: absolute;
    bottom: 0;
    left: 0;
    font-size:24rpx;
}
.newsitem .subtopic{
  position: absolute;
  bottom: 0;
  left: 0;
  font-size:24rpx;
  color: #fff;
  padding: 6rpx 10rpx;
  background: red;
}
.newslide{
    position: relative;
    border-bottom: 1rpx solid #eee;
    padding: 0rpx 30rpx 40rpx;
    font-size: 32rpx;
}
.newslide .title{
    text-align: center;
    line-height: 50rpx;

}
.newslide .imgbox{
    display: flex;
    justify-content: space-around;
}
.newslide .imgbox .img{
    padding: 10rpx;
    height: 200rpx
}
.newslide .commentnum,
.videoitem .commentnum{
    position: absolute;
    bottom: 0;
    right: 30rpx;
}

.videoitem{
  padding: 30rpx;
  position: relative;
}
.videoitem .title{
  font-size: 32rpx;
  margin-bottom: 30rpx
}
.videoitem .img{
  width: 100%;
  height: 380rpx;
}

.commentnum{
  font-size: 24rpx;
}

.loading {
  font-size: 32rpx;
  text-align: center;
  padding: 40rpx;
}

.video {
  position: relative
}
.video::before{
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  border-left: 30rpx solid #fff;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  left: 50%;
  top: 50%;
  margin-top: -15rpx;
  margin-left: -7.5rpx;
  z-index: 1
}
.video::after{
  position: absolute;
  content: "";
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #000;
  opacity: .7;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}
